---
import { Icon } from "astro-icon";
import HeroImage from "~/components/hero-image.astro";
import { GITHUB_URL, LINKEDIN_URL, MAILTO_URL } from "~/data/contants";

const links = [
  {
    url: "/#",
    description: "Tashif's portfolio",
    icon: "mdi:home",
  },
  {
    url: GITHUB_URL,
    description: "Tashif on GitHub",
    icon: "socials/github",
  },
  {
    url: LINKEDIN_URL,
    description: "Tashif on LinkedIn",
    icon: "socials/linkedin",
  },
  {
    url: MAILTO_URL,
    description: "Message Tashif",
    icon: "socials/send",
  },
];
---

<footer class="relative flex items-center justify-center h-64">
  <div class="absolute inset-0 overflow-hidden opacity-40">
    <HeroImage />
  </div>
  <ul class="relative grid grid-cols-2 gap-4 sm:grid-cols-4">
    {
      links.map((link) => (
        <li>
          <a
            class="flex items-center justify-center w-16 h-16 p-4 border-2 border-current rounded-full"
            href={link.url}
          >
            <span class="sr-only">{link.description}</span>
            <Icon class="h-full hover:animate-pulse" name={link.icon} />
          </a>
        </li>
      ))
    }
  </ul>
</footer>
